<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<BorderPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LoginController">
    <top>
        <BorderPane>
            <left>
                <TextField fx:id="tfLogin" onAction="#logIn" prefHeight="65.0" prefWidth="215.0" promptText="Введите логин" />
            </left>
            <right>
                <TextField fx:id="tfPass" onAction="#logIn" prefHeight="64.0" prefWidth="202.0" promptText="Введите пароль" />
            </right>
        </BorderPane>


    </top>
    <center>
        <BorderPane>
            <left>
                <Label fx:id="lResponse" text="Введите логин пароль"/>
            </left>
            <right>
                <Button fx:id="bLogin" onAction="#logIn" text="LOGIN" />
            </right>
        </BorderPane>


    </center>

    <bottom>

                <Button fx:id="bRegister" onAction="#regIn" text="Register" />






    </bottom>


</BorderPane>
