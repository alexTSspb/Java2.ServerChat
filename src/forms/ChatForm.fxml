<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.ChatController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
 <BorderPane>

         <left>
             <Label fx:id = "lNick" text="ЧАТ"  />
         </left>
     <right>
         <Button text="EXIT" onAction="#onExit"/>
     </right>


 </BorderPane>
    </top>
    <center>
        <HBox>
            <TextArea fx:id="taChat" editable="false" focusTraversable="false" wrapText="true" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">

            </TextArea>
            <TextArea fx:id="taUsers" editable="false" prefWidth="200"/>
        </HBox>
    </center>
    <bottom>
        <HBox>
            <TextField fx:id="tfMessage" HBox.hgrow="ALWAYS" onAction="#sendButtonAction" >
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </TextField>
            <Button onAction="#sendButtonAction" prefWidth="100" text="Послать" />
        </HBox>
    </bottom>
</BorderPane>
